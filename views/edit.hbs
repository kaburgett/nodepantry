<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/main.css">
    <title></title>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
</head>
<body>
    <div class="centered">
        <input id="id" type="hidden" value="{{ _id }}">
        <input id="name" type="text" value="{{ name }}">
        <input id="have" type="text" value="{{ have }}">
        <input id="need" type="text" value="{{ need }}">
        <input id="location" type="text" name="location" value="{{ location }}">
        <button id="deleteItem" type="button">Delete</button>
        <p><button id="update" type="button">All better!</button></p>
    </div>
    <script>
        $('#update').on('click', function(){
            var pantryEntries = {
                'name':$('#name').val(),
                'have':$('#have').val(),
                'need':$('#need').val(),
                'location':$('#location').val()
            }
            $.ajax({
                method: 'PUT',
                url: '/pantry/' + $('#id').val(),
                data: pantryEntries,
                success: function(){
                    window.location.href='/yourpantry'
                }
            })
        })
        $('#deleteItem').on('click', function(){
            $.ajax({
                method: 'DELETE',
                url: '/pantry/' + $('#id').val(),
                success: function(){
                    window.location.href="/yourpantry"
                }
            })
        })
    </script>
</body>
</html>